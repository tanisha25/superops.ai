package com.springboot.user.controller;

import java.util.UUID;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.springboot.user.service.SeatsService;
import com.springboot.user.utils.Utils;

public class SeatsController {
	@Autowired
	private SeatsService seatBookingService;
	@RequestMapping(value="/book/seats/{theatreName}/{movieName}/{userName}/{noOfSeats}/{seatsId}",method = RequestMethod.GET)
	public void bookSeats(@PathVariable String theatreName, @PathVariable String movieName, @PathVariable String userName, @PathVariable int noOfSeats, @PathVariable int[] seatList) throws Exception
	{
		UUID seatBookingId = seatBookingService.bookSeats(theatreName, movieName, userName, noOfSeats, seatList);
		if(!Utils.isEmpty(seatBookingId))
			seatBookingService.payForSeats(seatBookingId);
	}
	
	
}
