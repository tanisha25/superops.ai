package com.springboot.user.repo;

import java.util.List;
import java.util.UUID;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.springboot.user.entity.Screening;
import com.springboot.user.entity.SeatBooking;
import com.springboot.user.entity.Users;

@Repository
public interface SeatBookingRepository extends JpaRepository<SeatBooking, UUID>{
	
	@Query("SELECT u FROM SeatBooking u WHERE u.screening = ?1 && u.seatsRequested in (?2) && u.user!= ?3 && u.status != ?4 && u.deleted = false")
	List<SeatBooking> findByScreeningAndSeatsRequested(Screening screen, List<Integer> seatsRequested, Users user, String status);
	
}
